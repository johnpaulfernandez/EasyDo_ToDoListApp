<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    tools:context="com.codepath.easydo.activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:contentInsetLeft="@dimen/activity_content_inset"
        android:contentInsetStart="@dimen/activity_content_inset"
        app:titleTextAppearance="@style/ActionBarTitle">
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/lvItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:divider="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_margin_8dp"
        android:layout_marginRight="@dimen/activity_margin_8dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorHolo"
        android:onClick="onAddItem"
        android:text="@string/add"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_margin_12dp"
        android:layout_marginEnd="@dimen/activity_margin_12dp"
        android:layout_marginBottom="@dimen/activity_margin_12dp" />
</RelativeLayout>
